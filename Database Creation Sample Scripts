CREATE DATABASE SampleDB;
GO


--Example 2:
CREATE DATABASE [MovieDB]

 CONTAINMENT = NONE
 ON  PRIMARY 
( NAME = N'MovieDB', FILENAME = N'D:\MSSQL\TESTDATA\MovieDB.mdf' , SIZE = 8192KB , FILEGROWTH = 65536KB )
 LOG ON 
( NAME = N'MovieDB_log', FILENAME = N'L:\MSSQL\TESTLOG\MovieDB_log.ldf' , SIZE = 8192KB , FILEGROWTH = 65536KB )
GO
ALTER DATABASE [MovieDB] ADD FILEGROUP [ACTION]
GO
ALTER DATABASE [MovieDB] ADD FILEGROUP [COMEDY]
GO
ALTER DATABASE [MovieDB] ADD FILEGROUP [HORROR]
GO
ALTER DATABASE [MovieDB] ADD FILEGROUP [ROMANTIC]
GO



USE [MovieDB]
GO
IF NOT EXISTS (SELECT name FROM sys.filegroups WHERE is_default=1 AND name = N'PRIMARY') ALTER DATABASE [MovieDB] MODIFY FILEGROUP [PRIMARY] DEFAULT
GO
--adding files into filegroups
USE [master]
GO
ALTER DATABASE [MovieDB] ADD FILE ( NAME = N'Fast and Furious', FILENAME = N'D:\MSSQL\TESTDATA\Fast and Furious.ndf' , SIZE = 8192KB , FILEGROWTH = 65536KB ) TO FILEGROUP [ACTION]
GO
ALTER DATABASE [MovieDB] ADD FILE ( NAME = N'Aki and Pawpaw', FILENAME = N'D:\MSSQL\TESTDATA\Aki and Pawpaw.ndf' , SIZE = 8192KB , FILEGROWTH = 65536KB ) TO FILEGROUP [COMEDY]
GO
ALTER DATABASE [MovieDB] ADD FILE ( NAME = N'The Saw', FILENAME = N'D:\MSSQL\TESTDATA\The Saw.ndf' , SIZE = 8192KB , FILEGROWTH = 65536KB ) TO FILEGROUP [HORROR]
GO
ALTER DATABASE [MovieDB] ADD FILE ( NAME = N'Love', FILENAME = N'D:\MSSQL\TESTDATA\Love.ndf' , SIZE = 8192KB , FILEGROWTH = 65536KB ) TO FILEGROUP [ROMANTIC]
GO
USE [MovieDB]
GO
ALTER AUTHORIZATION ON DATABASE::[MovieDB] TO [sa]
GO

--Example 3:
--Creating a Database

create database TescoDB

--Adding File Groups Into a Database
USE [master]
GO
ALTER DATABASE [TescoDB] ADD FILEGROUP [Chelf1]
GO
ALTER DATABASE [TescoDB] ADD FILEGROUP [Chelf2]
GO
ALTER DATABASE [TescoDB] ADD FILEGROUP [Chelf3]
GO
ALTER DATABASE [TescoDB] ADD FILEGROUP [Chelf4]
GO
ALTER DATABASE [TescoDB] ADD FILEGROUP [Chelf5]
GO


